<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape>
			<solid
				android:color="#2C2C2C" />
			<stroke
				android:width="0.7dp"
				android:color="#2c2c2c" />
			<corners
				android:radius="0dp" />
			<padding
				android:left="5dp"
				android:top="5dp"
				android:right="5dp"
				android:bottom="5dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#101010"
				android:endColor="#101010"
				android:angle="270" />
			<stroke
				android:width="0.6dp"
				android:color="#101010" />
			<corners
				android:radius="0dp" />
			<padding
				android:left="5dp"
				android:top="5dp"
				android:right="5dp"
				android:bottom="5dp" />
		</shape>
	</item>
</selector>
